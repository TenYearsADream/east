<Window x:Class="laserScada.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:laserScada"
        mc:Ignorable="d"
        Title="MainWindow" Height="569.535" Width="887.574">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="200"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1">
            <TabControl x:Name="tabControl"   >
                <TabItem Header="Соединение">
                    <StackPanel Background="#FFE5E5E5" >
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="tbDeviceIP" Text="TextBox"  TextChanged="tbDeviceIP_TextChanged" VerticalAlignment="Center"/>
                            <Label x:Name="lbConectedStatus" Content="Label" VerticalAlignment="Center" />
                            <CheckBox x:Name="cb_cnt_autoconnect" Content="Автоматическое соединение" VerticalAlignment="Center"/>
                        </StackPanel >

                        <TextBox x:Name="tbCounter" Text="TextBox"  />
                        <Button Content="123"/>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Каретка">

            
                        <StackPanel Background="#FFE5E5E5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="позиция"  Grid.Row="0" Grid.Column="0"/>
                            <TextBox Width="100" x:Name="kar_tb_position" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1"/>
                            <Label Content="Шаг" Grid.Row="1" Grid.Column="0"/>
                            <TextBox Width="100" x:Name="kar_tb_step" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1"/>

                            <Label Content="скорость влево" Grid.Row="2" Grid.Column="0"/>
                            <TextBox Width="100" x:Name="kar_tb_left_speed" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1"/>
                            <Label Content="скорость вправо"  Grid.Row="3" Grid.Column="0"/>
                            <TextBox Width="100" x:Name="kar_tb_right_speed" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" Grid.Column="1"/>

                        </Grid>
                    </StackPanel>

                </TabItem>
            </TabControl>
        </StackPanel>

    </Grid>
</Window>
