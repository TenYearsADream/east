        <uc:Led x:Name="main_led_connect" IsActive="{Binding LedStatus, Mode=OneWay}" Flashing="{Binding Flash}"  ColorNull="Gray"  Text="Соединение" ColorOn="Green" ColorOff="Red" Margin="10,10,751.8,112.4"/>
        <Button x:Name="button" Content="Каретка - поиск 0" HorizontalAlignment="Left" Margin="163,19,0,0" VerticalAlignment="Top" Width="115" Click="kar_bt_find_orign_Click"/>
        <Button x:Name="spIceCtl" Content="SpIce настройка" HorizontalAlignment="Left" Margin="299,104,0,0" VerticalAlignment="Top" Width="125" RenderTransformOrigin="-0.063,0.552" Click="spIceCtl_Click"/>
        <Button x:Name="button1" Content="Стол - Уст 0" HorizontalAlignment="Left" Margin="163,60,0,0" VerticalAlignment="Top" Width="115" Click="stol_bt_set_zero_Click"/>
        <Button x:Name="button2" Content="Питание лазера" HorizontalAlignment="Left" Margin="301,20,0,0" VerticalAlignment="Top" Width="123" Click="main_laser_power"/>
        <Button x:Name="main_bt_startLayer" Content="Прожиг" HorizontalAlignment="Left" Margin="446,19,0,0" VerticalAlignment="Top" Width="112" Click="main_bt_startLayer_Click"/>
        <Button x:Name="main_bt_pause" Content="Пауза" HorizontalAlignment="Left" Margin="743,20,0,0" VerticalAlignment="Top" Width="109" Click="main_bt_pause_Click"/>
        <Button x:Name="main_liht" Content="Свет" HorizontalAlignment="Left" Margin="10,43,0,0" VerticalAlignment="Top" Width="119" Height="19" Click="main_bt_light"/>

