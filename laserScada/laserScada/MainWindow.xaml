                    <local:dataField x:Name="layer_pusk_gotov" Text="Выполнено" Grid.Column="3" Grid.Row="1" />
                    <Button x:Name="layer_avtomat_reset"  Content="Сброс" Grid.Column="4" Grid.Row="1" />

                    <local:dataField x:Name="layer_widh" Text="Толщина сл" Grid.Column="0" Grid.Row="2" />
                    <local:dataField x:Name="layer_time_rot_m3" Text="Время М3" Grid.Column="0" Grid.Row="3"  />
                    <local:dataField x:Name="layer_stop_m3" Text="Откл М3" Grid.Column="0" Grid.Row="4" />


