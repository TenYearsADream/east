                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="layer_avtomat_d"  Content="Автомат дозатора" Grid.Column="0" Grid.Row="0" />
                    <local:dataField x:Name="layer_doz_num" Text="Слоев" Grid.Column="1" Grid.Row="0" />
                    <local:dataField x:Name="layer_doz_rem" Text="Остаток" Grid.Column="2" Grid.Row="0" />
                    
